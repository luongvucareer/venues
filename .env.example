# Database Configuration (for Docker PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=venues

# Database URL for Prisma (kết nối từ máy local vào Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/venues

# pgAdmin (Optional - chỉ cần nếu bạn muốn dùng giao diện quản lý database)
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
# Generate với lệnh: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_change_this

# OAuth Providers (Optional - cấu hình sau nếu cần)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email Configuration (Optional - cấu hình sau nếu cần)
RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com
